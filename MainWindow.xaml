<Window x:Class="wpfCCTV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfCCTV"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <!-- 상단 설정 패널 -->
        <Border Grid.Row="0" Background="#F0F0F0" Padding="10" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 첫 번째 줄: 기본 설정 -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="신뢰도 임계값:" VerticalAlignment="Center" Margin="5,0"/>
                        <Slider x:Name="ConfidenceSlider" Width="150" Minimum="0.1" Maximum="0.9" 
                                Value="0.5" TickFrequency="0.1" IsSnapToTickEnabled="True" 
                                VerticalAlignment="Center" Margin="5,0" 
                                ValueChanged="ConfidenceSlider_ValueChanged"/>
                        <TextBlock x:Name="ConfidenceText" Text="0.5" VerticalAlignment="Center" 
                                   Width="40" Margin="5,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <CheckBox x:Name="ShowLabelsCheckBox" Content="라벨 표시" IsChecked="True" 
                                  VerticalAlignment="Center" Margin="10,0"/>
                        <CheckBox x:Name="ShowConfidenceCheckBox" Content="신뢰도 표시" IsChecked="True" 
                                  VerticalAlignment="Center" Margin="10,0"/>
                    </StackPanel>
                </Grid>

                <!-- 두 번째 줄: 고급 설정 + 모델 선택 -->
                <Grid Grid.Row="1" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 모델 선택 -->
                    <Border Grid.Column="0" BorderBrush="#4CAF50" BorderThickness="2" 
                            Background="#E8F5E9" Padding="8" Margin="0,0,10,0" CornerRadius="3">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🧠 모델:" VerticalAlignment="Center" 
                                       Margin="5,0" FontWeight="Bold" Foreground="#2E7D32"/>
                            <RadioButton x:Name="ObjectDetectionRadio" Content="객체 감지 (80종)" 
                                         GroupName="ModelType" IsChecked="True"
                                         VerticalAlignment="Center" Margin="10,0"
                                         Checked="ModelType_Changed"/>
                            <RadioButton x:Name="FaceDetectionRadio" Content="얼굴 인식" 
                                         GroupName="ModelType"
                                         VerticalAlignment="Center" Margin="10,0"
                                         Checked="ModelType_Changed"/>
                        </StackPanel>
                    </Border>

                    <!-- 카메라 선택 -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,20,0">
                        <TextBlock Text="카메라:" VerticalAlignment="Center" Margin="5,0"/>
                        <ComboBox x:Name="CameraComboBox" Width="120" Height="25" Margin="5,0">
                            <ComboBoxItem Content="카메라 0 (기본)" Tag="0" IsSelected="True"/>
                            <ComboBoxItem Content="카메라 1" Tag="1"/>
                            <ComboBoxItem Content="카메라 2" Tag="2"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- 자동 저장 설정 -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <CheckBox x:Name="AutoSaveCheckBox" Content="자동 저장" 
                                  VerticalAlignment="Center" Margin="10,0" 
                                  Checked="AutoSaveCheckBox_Changed" Unchecked="AutoSaveCheckBox_Changed"/>
                        <Button x:Name="SelectAutoSaveFolderButton" Content="📁 폴더 선택" 
                                Width="90" Height="25" Margin="5,0" Click="SelectAutoSaveFolderButton_Click"/>
                        <TextBlock x:Name="AutoSaveFolderText" Text="폴더 미선택" 
                                   VerticalAlignment="Center" Margin="5,0" Foreground="Gray"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- 이미지/비디오 표시 영역 -->
        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="2" Margin="10" Background="Black">
            <Grid>
                <Image x:Name="DisplayImage" Stretch="Uniform"/>
                <TextBlock x:Name="StatusText" Text="모델 로딩 중..." 
                           Foreground="White" FontSize="20" FontWeight="Bold"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Visibility="Visible"/>

                <!-- 현재 모델 표시 -->
                <Border Background="#AA000000" Padding="10,5" 
                        HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"
                        CornerRadius="3">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="CurrentModelText" Text="🧠 객체 감지 모드" 
                                   Foreground="#4CAF50" FontSize="14" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 비디오 프로그레스 바 -->
                <Grid x:Name="VideoProgressPanel" VerticalAlignment="Bottom" Margin="20,0,20,20" 
                      Background="#CC000000" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="10,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" x:Name="CurrentTimeText" Text="00:00" 
                                   Foreground="White" FontSize="12" FontFamily="Consolas"/>
                        <TextBlock Grid.Column="1" x:Name="VideoTitleText" Text="" 
                                   Foreground="White" FontSize="12" TextAlignment="Center" 
                                   TextTrimming="CharacterEllipsis"/>
                        <TextBlock Grid.Column="2" x:Name="TotalTimeText" Text="00:00" 
                                   Foreground="White" FontSize="12" FontFamily="Consolas"/>
                    </Grid>

                    <ProgressBar Grid.Row="1" x:Name="VideoProgressBar" Height="8" Margin="10,0,10,10"
                                 Minimum="0" Maximum="100" Value="0" 
                                 Background="#33FFFFFF" Foreground="#FF00FF00"/>
                </Grid>
            </Grid>
        </Border>

        <!-- 기본 컨트롤 버튼 -->
        <Border Grid.Row="2" Background="#F0F0F0" Padding="10" BorderBrush="#CCCCCC" BorderThickness="0,1,0,1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="LoadImageButton" Content="📷 이미지 열기" Width="130" Height="45" 
                        Margin="5" Click="LoadImageButton_Click" FontSize="14"/>
                <Button x:Name="StartWebcamButton" Content="🎥 웹캠 시작" Width="130" Height="45" 
                        Margin="5" Click="StartWebcamButton_Click" FontSize="14"/>
                <Button x:Name="StopWebcamButton" Content="⏹ 웹캠 중지" Width="130" Height="45" 
                        Margin="5" Click="StopWebcamButton_Click" IsEnabled="False" FontSize="14"/>
                <Button x:Name="LoadVideoButton" Content="🎬 비디오 열기" Width="130" Height="45" 
                        Margin="5" Click="LoadVideoButton_Click" FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- 고급 저장 컨트롤 버튼 -->
        <Border Grid.Row="3" Background="#E8F5E9" Padding="10" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="SaveImageButton" Content="💾 현재 화면 저장" Width="140" Height="40" 
                            Margin="5" Click="SaveImageButton_Click" FontSize="13"/>
                    <Button x:Name="TriggerSaveButton" Content="🎯 조건부 저장 설정" Width="140" Height="40" 
                            Margin="5" Click="TriggerSaveButton_Click" FontSize="13"
                            ToolTip="특정 객체 감지 시 자동 저장"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                    <TextBlock x:Name="TriggerStatusText" Text="트리거: 없음" 
                               FontSize="12" Foreground="Gray" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 감지 결과 표시 -->
        <Border Grid.Row="4" BorderBrush="Gray" BorderThickness="2" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 로그 영역 -->
                <Border Grid.Column="0" BorderBrush="#CCCCCC" BorderThickness="0,0,1,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Background="#F5F5F5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="활동 로그" FontWeight="Bold" FontSize="12"/>
                            <Button Grid.Column="1" Content="🗑️ 지우기" Width="60" Height="20" 
                                    FontSize="10" Click="ClearLogButton_Click"/>
                        </Grid>

                        <ScrollViewer Grid.Row="1" x:Name="LogScrollViewer">
                            <TextBlock x:Name="LogTextBlock" Margin="10" TextWrapping="Wrap" 
                                       FontSize="12" FontFamily="Consolas" Background="White"/>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- 통계 영역 -->
                <Border Grid.Column="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="감지 통계" FontWeight="Bold" FontSize="14" 
                                   Margin="10,10,10,5" Background="#F5F5F5" Padding="5"/>
                        <ScrollViewer Grid.Row="1">
                            <TextBlock x:Name="StatsTextBlock" FontSize="12" FontFamily="Consolas" 
                                       TextWrapping="Wrap" Margin="10,5,10,10"/>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
